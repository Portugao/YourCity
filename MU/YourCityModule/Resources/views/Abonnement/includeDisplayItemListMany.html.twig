{# purpose of this template: inclusion template for display of related abonnements #}
{% set hasAdminPermission = hasPermission('MUYourCityModule:Abonnement:', '::', 'ACCESS_EDIT') %}
{% if items|default and items|length > 0 %}
<ul class="list-group muyourcitymodule-related-item-list abonnement">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
    {{ item|muyourcitymodule_formattedTitle }}
</h4>
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
