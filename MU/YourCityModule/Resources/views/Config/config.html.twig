                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab5" aria-labelledby="vars5Tab">
                    {% set tabTitle = __('Integration') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('These options allow you to configure integration aspects.')|nl2br }}</p>
                    
                        {{ form_row(form.enabledFinderTypes) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab6" aria-labelledby="vars6Tab">
                    {% set tabTitle = __('Geo') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can define settings related to geographical features.')|nl2br }}</p>
                    
                        {{ form_row(form.googleMapsApiKey) }}
                        {{ form_row(form.defaultLatitude) }}
                        {{ form_row(form.defaultLongitude) }}
                        {{ form_row(form.defaultMapType) }}
                        {{ form_row(form.defaultZoomLevel) }}
