            {% set tabTitle = __('Geo') %}
            <li role="presentation">
                <a id="vars6Tab" href="#tab6" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
            </li>
