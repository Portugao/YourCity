                <div role="tabpanel" class="tab-pane fade" id="tabImagesImageOfLocationImage" aria-labelledby="imagesImageOfLocationImageTab">
                    {% set tabTitle = __('Image settings for images of location image') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForImageOfLocationImage) }}
                        <div id="shrinkDetailsImageOfLocationImage">
                        {{ form_row(form.shrinkWidthImageOfLocationImage) }}
                        {{ form_row(form.shrinkHeightImageOfLocationImage) }}
                        </div>
                        {{ form_row(form.thumbnailModeImageOfLocationImage) }}
                        {{ form_row(form.thumbnailWidthImageOfLocationImageView) }}
                        {{ form_row(form.thumbnailHeightImageOfLocationImageView) }}
                        {{ form_row(form.thumbnailWidthImageOfLocationImageDisplay) }}
                        {{ form_row(form.thumbnailHeightImageOfLocationImageDisplay) }}
                        {{ form_row(form.thumbnailWidthImageOfLocationImageEdit) }}
