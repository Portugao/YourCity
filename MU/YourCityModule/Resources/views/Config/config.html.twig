                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesMenuOfLocationImageOfMenu" aria-labelledby="imagesMenuOfLocationImageOfMenuTab">
                    {% set tabTitle = __('Image settings for menus of location image of menu') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForMenuOfLocationImageOfMenu) }}
                        <div id="shrinkDetailsMenuOfLocationImageOfMenu">
                        {{ form_row(form.shrinkWidthMenuOfLocationImageOfMenu) }}
                        {{ form_row(form.shrinkHeightMenuOfLocationImageOfMenu) }}
                        </div>
                        {{ form_row(form.thumbnailModeMenuOfLocationImageOfMenu) }}
                        {{ form_row(form.thumbnailWidthMenuOfLocationImageOfMenuView) }}
                        {{ form_row(form.thumbnailHeightMenuOfLocationImageOfMenuView) }}
                        {{ form_row(form.thumbnailWidthMenuOfLocationImageOfMenuDisplay) }}
                        {{ form_row(form.thumbnailHeightMenuOfLocationImageOfMenuDisplay) }}
                        {{ form_row(form.thumbnailWidthMenuOfLocationImageOfMenuEdit) }}
                        {{ form_row(form.thumbnailHeightMenuOfLocationImageOfMenuEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesDishImageOfDish" aria-labelledby="imagesDishImageOfDishTab">
                    {% set tabTitle = __('Image settings for dishes image of dish') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
