                        {{ form_row(form.thumbnailHeightLocationLogoOfYourLocationView) }}
                        {{ form_row(form.thumbnailWidthLocationLogoOfYourLocationDisplay) }}
                        {{ form_row(form.thumbnailHeightLocationLogoOfYourLocationDisplay) }}
                        {{ form_row(form.thumbnailWidthLocationLogoOfYourLocationEdit) }}
                        {{ form_row(form.thumbnailHeightLocationLogoOfYourLocationEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesLocationImageOfLocation" aria-labelledby="imagesLocationImageOfLocationTab">
                    {% set tabTitle = __('Image settings for locations image of location') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForLocationImageOfLocation) }}
                        <div id="shrinkDetailsLocationImageOfLocation">
                        {{ form_row(form.shrinkWidthLocationImageOfLocation) }}
                        {{ form_row(form.shrinkHeightLocationImageOfLocation) }}
                        </div>
                        {{ form_row(form.thumbnailModeLocationImageOfLocation) }}
                        {{ form_row(form.thumbnailWidthLocationImageOfLocationView) }}
