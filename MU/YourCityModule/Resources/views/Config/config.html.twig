                <li>
                    <a id="imagesLocationImageOfLocationTab" href="#tabImagesLocationImageOfLocation" role="tab" data-toggle="tab" aria-controls="tabImagesLocationImageOfLocation">{{ __('Locations image of location') }}</a>
                </li>
                <li>
                    <a id="imagesPartImageOfPartTab" href="#tabImagesPartImageOfPart" role="tab" data-toggle="tab" aria-controls="tabImagesPartImageOfPart">{{ __('Parts image of part') }}</a>
