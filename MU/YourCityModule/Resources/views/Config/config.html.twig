                <div role="tabpanel" class="tab-pane fade" id="tabImagesEventImageOfEvent" aria-labelledby="imagesEventImageOfEventTab">
                    {% set tabTitle = __('Image settings for events image of event') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
