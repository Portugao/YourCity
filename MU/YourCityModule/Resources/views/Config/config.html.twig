                <li>
                    <a id="imagesImageOfLocationImageTab" href="#tabImagesImageOfLocationImage" role="tab" data-toggle="tab" aria-controls="tabImagesImageOfLocationImage">{{ __('Images of location image') }}</a>
                </li>
                <li>
                    <a id="imagesOfferImageOfOfferTab" href="#tabImagesOfferImageOfOffer" role="tab" data-toggle="tab" aria-controls="tabImagesOfferImageOfOffer">{{ __('Offers image of offer') }}</a>
                </li>
                <li>
                    <a id="imagesMenuOfLocationImageOfMenuTab" href="#tabImagesMenuOfLocationImageOfMenu" role="tab" data-toggle="tab" aria-controls="tabImagesMenuOfLocationImageOfMenu">{{ __('Menus of location image of menu') }}</a>
                </li>
                <li>
                    <a id="imagesDishImageOfDishTab" href="#tabImagesDishImageOfDish" role="tab" data-toggle="tab" aria-controls="tabImagesDishImageOfDish">{{ __('Dishes image of dish') }}</a>
                </li>
                <li>
                    <a id="imagesEventImageOfEventTab" href="#tabImagesEventImageOfEvent" role="tab" data-toggle="tab" aria-controls="tabImagesEventImageOfEvent">{{ __('Events image of event') }}</a>
                </li>
                <li>
                    <a id="imagesProductImageOfProductTab" href="#tabImagesProductImageOfProduct" role="tab" data-toggle="tab" aria-controls="tabImagesProductImageOfProduct">{{ __('Products image of product') }}</a>
