                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                    
                        {{ form_row(form.branchEntriesPerPage) }}
                        {{ form_row(form.linkOwnBranchesOnAccountPage) }}
                        {{ form_row(form.locationEntriesPerPage) }}
                        {{ form_row(form.linkOwnLocationsOnAccountPage) }}
                        {{ form_row(form.partEntriesPerPage) }}
                        {{ form_row(form.linkOwnPartsOnAccountPage) }}
                        {{ form_row(form.imageOfLocationEntriesPerPage) }}
                        {{ form_row(form.linkOwnImagesOfLocationOnAccountPage) }}
                        {{ form_row(form.fileOfLocationEntriesPerPage) }}
                        {{ form_row(form.linkOwnFilesOfLocationOnAccountPage) }}
                        {{ form_row(form.offerEntriesPerPage) }}
                        {{ form_row(form.linkOwnOffersOnAccountPage) }}
                        {{ form_row(form.menuOfLocationEntriesPerPage) }}
                        {{ form_row(form.linkOwnMenusOfLocationOnAccountPage) }}
                        {{ form_row(form.partOfMenuEntriesPerPage) }}
                        {{ form_row(form.linkOwnPartsOfMenuOnAccountPage) }}
                        {{ form_row(form.dishEntriesPerPage) }}
                        {{ form_row(form.linkOwnDishesOnAccountPage) }}
                        {{ form_row(form.eventEntriesPerPage) }}
                        {{ form_row(form.linkOwnEventsOnAccountPage) }}
                        {{ form_row(form.productEntriesPerPage) }}
                        {{ form_row(form.linkOwnProductsOnAccountPage) }}
                        {{ form_row(form.specialOfLocationEntriesPerPage) }}
                        {{ form_row(form.linkOwnSpecialsOfLocationOnAccountPage) }}
                        {{ form_row(form.serviceOfLocationEntriesPerPage) }}
                        {{ form_row(form.linkOwnServicesOfLocationOnAccountPage) }}
                        {{ form_row(form.abonnementEntriesPerPage) }}
                        {{ form_row(form.linkOwnAbonnementsOnAccountPage) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesBranchImageOfBranch" aria-labelledby="imagesBranchImageOfBranchTab">
                    {% set tabTitle = __('Image settings for branches image of branch') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForBranchImageOfBranch) }}
                        <div id="shrinkDetailsBranchImageOfBranch">
                        {{ form_row(form.shrinkWidthBranchImageOfBranch) }}
                        {{ form_row(form.shrinkHeightBranchImageOfBranch) }}
                        </div>
                        {{ form_row(form.thumbnailModeBranchImageOfBranch) }}
                        {{ form_row(form.thumbnailWidthBranchImageOfBranchView) }}
                        {{ form_row(form.thumbnailHeightBranchImageOfBranchView) }}
                        {{ form_row(form.thumbnailWidthBranchImageOfBranchDisplay) }}
                        {{ form_row(form.thumbnailHeightBranchImageOfBranchDisplay) }}
                        {{ form_row(form.thumbnailWidthBranchImageOfBranchEdit) }}
                        {{ form_row(form.thumbnailHeightBranchImageOfBranchEdit) }}
