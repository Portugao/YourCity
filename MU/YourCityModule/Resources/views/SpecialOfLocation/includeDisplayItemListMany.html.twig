{# purpose of this template: inclusion template for display of related services of location #}
{% set hasAdminPermission = hasPermission('MUYourCityModule:ServiceOfLocation:', '::', 'ACCESS_EDIT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group muyourcitymodule-related-item-list serviceOfLocation">
{% for item in items %}
<li class="list-group-item">{{ item.iconForSpecial|raw }} <a href="{{ path('muyourcitymodule_specialoflocation_' ~ routeArea ~ 'display', { 'id': item.id }) }}">{{ item.name }}</a></li>
{% endfor %}
</ul>
{% endif %}

