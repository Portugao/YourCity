{# purpose of this template: inclusion template for display of related products #}
{% set hasAdminPermission = hasPermission('MUYourCityModule:Product:', '::', 'ACCESS_EDIT') %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('muyourcitymodule_product_' ~ routeArea ~ 'display', { 'id': item.id }) }}" title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|muyourcitymodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="productItem{{ item.id }}Display" href="{{ path('muyourcitymodule_product_' ~ routeArea ~ 'display', { 'id': item.id, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
