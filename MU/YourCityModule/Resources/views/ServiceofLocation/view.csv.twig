    "{{ serviceOfLocation.name }}";"{{ serviceOfLocation.description|safeHtml }}";"{{ serviceOfLocation.iconForService }}";"{{ serviceOfLocation.workflowState|muyourcitymodule_objectState(false)|lower }}"
