{# purpose of this template: events display kml view #}
<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2">
<Document>
    <Placemark>
        <name>{{ event.getName() }}</name>
        <description><![CDATA[{{ event.getDescription() }}<br /><a href="{{ url('muyourcitymodule_event_display', {'id': event.getId()}) }}">{{ __('Details') }}</a>]]></description>
        <Point>
            <coordinates>{{ event.getLongitude() }}, {{ event.getLatitude() }}, 0</coordinates>
        </Point>
    </Placemark>
</Document>
</kml>
