{# purpose of this template: events xml inclusion template #}
<event id="{{ event.getId() }}" createdon="{{ event.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ event.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ event.id }}</id>
    <name><![CDATA[{{ event.name }}]]></name>
    <description><![CDATA[{{ event.description|safeHtml }}]]></description>
    <imageOfEvent{% if event.imageOfEvent is not empty and event.imageOfEventMeta|default %} extension="{{ event.imageOfEventMeta.extension }}" size="{{ event.imageOfEventMeta.size }}" isImage="{% if event.imageOfEventMeta.isImage %}true{% else %}false{% endif %}"{% if event.imageOfEventMeta.isImage %} width="{{ event.imageOfEventMeta.width }}" height="{{ event.imageOfEventMeta.height }}" format="{{ event.imageOfEventMeta.format }}"{% endif %}{% endif %}>{{ event.imageOfEvent }}</imageOfEvent>
    <kindOfEvent>{{ event.kindOfEvent|muyourcitymodule_listEntry('event', 'kindOfEvent') }}</kindOfEvent>
    <street><![CDATA[{{ event.street }}]]></street>
    <numberOfStreet><![CDATA[{{ event.numberOfStreet }}]]></numberOfStreet>
    <zipCode><![CDATA[{{ event.zipCode }}]]></zipCode>
    <city><![CDATA[{{ event.city }}]]></city>
    <startDate>{{ event.startDate|localizeddate('medium', 'short') }}</startDate>
    <endDate>{{ event.endDate|localizeddate('medium', 'short') }}</endDate>
    <start2Date>{% if event.start2Date is not empty %}
        {{ event.start2Date|localizeddate('medium', 'short') }}
    {% endif %}</start2Date>
    <end2Date>{% if event.end2Date is not empty %}
        {{ event.end2Date|localizeddate('medium', 'short') }}
    {% endif %}</end2Date>
    <inViewFrom>{% if event.inViewFrom is not empty %}
        {{ event.inViewFrom|localizeddate('medium', 'short') }}
    {% endif %}</inViewFrom>
    <inViewUntil>{% if event.inViewUntil is not empty %}
        {{ event.inViewUntil|localizeddate('medium', 'short') }}
    {% endif %}</inViewUntil>
    <myLocation>{{ event.myLocation|muyourcitymodule_listEntry('event', 'myLocation') }}</myLocation>
    <latitude>{{ event.latitude|muyourcitymodule_geoData }}</latitude>
    <longitude>{{ event.longitude|muyourcitymodule_geoData }}</longitude>
    <workflowState>{{ event.workflowState|muyourcitymodule_objectState(false)|lower }}</workflowState>
</event>
