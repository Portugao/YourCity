{# purpose of this template: menus of location xml inclusion template #}
<menuoflocation id="{{ menuOfLocation.getId() }}" createdon="{{ menuOfLocation.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ menuOfLocation.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ menuOfLocation.id }}</id>
    <name><![CDATA[{{ menuOfLocation.name }}]]></name>
    <description><![CDATA[{{ menuOfLocation.description|safeHtml }}]]></description>
    <imageOfMenu{% if menuOfLocation.imageOfMenu is not empty and menuOfLocation.imageOfMenuMeta|default %} extension="{{ menuOfLocation.imageOfMenuMeta.extension }}" size="{{ menuOfLocation.imageOfMenuMeta.size }}" isImage="{% if menuOfLocation.imageOfMenuMeta.isImage %}true{% else %}false{% endif %}"{% if menuOfLocation.imageOfMenuMeta.isImage %} width="{{ menuOfLocation.imageOfMenuMeta.width }}" height="{{ menuOfLocation.imageOfMenuMeta.height }}" format="{{ menuOfLocation.imageOfMenuMeta.format }}"{% endif %}{% endif %}>{{ menuOfLocation.imageOfMenu }}</imageOfMenu>
    <positionOfMenu>{{ menuOfLocation.positionOfMenu }}</positionOfMenu>
    <effectivFrom>{{ menuOfLocation.effectivFrom|localizeddate('medium', 'short') }}</effectivFrom>
    <effectivUntil>{{ menuOfLocation.effectivUntil|localizeddate('medium', 'short') }}</effectivUntil>
    <kindOfMenu>{{ menuOfLocation.kindOfMenu|muyourcitymodule_listEntry('menuOfLocation', 'kindOfMenu') }}</kindOfMenu>
    <additionalRemarks><![CDATA[{{ menuOfLocation.additionalRemarks|safeHtml }}]]></additionalRemarks>
    <workflowState>{{ menuOfLocation.workflowState|muyourcitymodule_objectState(false)|lower }}</workflowState>
    <location>{% if menuOfLocation.location|default %}{{ menuOfLocation.location|muyourcitymodule_formattedTitle }}{% endif %}</location>
    <dishes>
    {% if menuOfLocation.dishes|default %}
        {% for relatedItem in menuOfLocation.dishes %}
        <dish>{{ relatedItem|muyourcitymodule_formattedTitle }}</dish>
        {% endfor %}
    {% endif %}
    </dishes>
    <partsOfMenu>
    {% if menuOfLocation.partsOfMenu|default %}
        {% for relatedItem in menuOfLocation.partsOfMenu %}
        <partOfMenu>{{ relatedItem|muyourcitymodule_formattedTitle }}</partOfMenu>
        {% endfor %}
    {% endif %}
    </partsOfMenu>
</menuoflocation>
