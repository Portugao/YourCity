{# purpose of this template: inclusion template for display of related menus of location #}
{% set hasAdminPermission = hasPermission('MUYourCityModule:MenuOfLocation:', '::', 'ACCESS_EDIT') %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('muyourcitymodule_menuoflocation_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|muyourcitymodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="menuOfLocationItem{{ item.getKey() }}Display" href="{{ path('muyourcitymodule_menuoflocation_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
{% if item.imageOfMenu is not empty and item.imageOfMenuMeta.isImage %}
    <p>
        <img src="{{ item.imageOfMenu.getPathname()|imagine_filter('zkroot', relationThumbRuntimeOptions) }}" alt="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}" width="{{ relationThumbRuntimeOptions.thumbnail.size[0] }}" height="{{ relationThumbRuntimeOptions.thumbnail.size[1] }}" class="img-rounded" />
    </p>
{% endif %}
