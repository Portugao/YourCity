{# Purpose of this template: Display images of part within an external context #}
<dl>
    {% for imageOfPart in items %}
        <dt>{{ imageOfPart.getTitleFromDisplayPattern() }}</dt>
        {% if imageOfPart.name %}
            <dd>{{ imageOfPart.name|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyourcitymodule_imageofpart_display', { 'id': imageOfPart.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
