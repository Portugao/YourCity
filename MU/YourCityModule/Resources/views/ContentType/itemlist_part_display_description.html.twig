{# Purpose of this template: Display parts within an external context #}
<dl>
    {% for part in items %}
        <dt>{{ part|muyourcitymodule_formattedTitle }}</dt>
        {% if part.description %}
            <dd>{{ part.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyourcitymodule_part_display', {  }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
