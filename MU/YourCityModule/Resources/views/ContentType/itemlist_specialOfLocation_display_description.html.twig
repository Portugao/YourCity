{# Purpose of this template: Display specials of location within an external context #}
<dl>
    {% for specialOfLocation in items %}
        <dt>{{ specialOfLocation|muyourcitymodule_formattedTitle }}</dt>
        {% if specialOfLocation.description %}
            <dd>{{ specialOfLocation.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyourcitymodule_specialoflocation_display', {'id': specialOfLocation.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
