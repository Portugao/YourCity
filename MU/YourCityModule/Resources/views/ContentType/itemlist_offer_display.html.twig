{# Purpose of this template: Display offers within an external context #}
{% for offer in items %}
    <h3>{{ offer|muyourcitymodule_formattedTitle }}</h3>
    <p><a href="{{ path('muyourcitymodule_offer_display', {'id': offer.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
    </p>
{% endfor %}
