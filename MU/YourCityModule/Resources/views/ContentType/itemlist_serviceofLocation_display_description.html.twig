{# Purpose of this template: Display services of location within an external context #}
<dl>
    {% for serviceofLocation in items %}
        <dt>{{ serviceofLocation|muyourcitymodule_formattedTitle }}</dt>
        {% if serviceofLocation.description %}
            <dd>{{ serviceofLocation.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyourcitymodule_serviceoflocation_display', { 'id': serviceofLocation.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
