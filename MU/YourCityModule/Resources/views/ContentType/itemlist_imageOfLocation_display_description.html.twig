{# Purpose of this template: Display images of location within an external context #}
<dl>
    {% for imageOfLocation in items %}
        <dt>{{ imageOfLocation|muyourcitymodule_formattedTitle }}</dt>
        {% if imageOfLocation.description %}
            <dd>{{ imageOfLocation.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muyourcitymodule_imageoflocation_display', { 'id': imageOfLocation.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
