{# Purpose of this template: Display one certain service of location within an external context #}
<div id="serviceOfLocation{$serviceOfLocation->getKey()}" class="muyourcitymodule-external-serviceoflocation">
{% if displayMode == 'link' %}
    <p class="muyourcitymodule-external-link">
    <a href="{{ path('muyourcitymodule_serviceoflocation_display', { 'id': serviceOfLocation.getId() }) }}" title="{{ serviceOfLocation|muyourcitymodule_formattedTitle|e('html_attr') }}">
    {{ serviceOfLocation|muyourcitymodule_formattedTitle|notifyFilters('yourcity.filter_hooks.servicesoflocation.filter')|safeHtml }}
    </a>
    </p>
{% endif %}
{% if hasPermission('MUYourCityModule::', '::', 'ACCESS_EDIT') %}
    {# for normal users without edit permission show only the actual file per default #}
    {% if displayMode == 'embed' %}
        <p class="muyourcitymodule-external-title">
            <strong>{{ serviceOfLocation|muyourcitymodule_formattedTitle|notifyFilters('yourcity.filter_hooks.servicesoflocation.filter')|safeHtml }}</strong>
        </p>
    {% endif %}
{% endif %}

{% if displayMode == 'link' %}
{% elseif displayMode == 'embed' %}
    <div class="muyourcitymodule-external-snippet">
        &nbsp;
    </div>

    {# you can distinguish the context like this: #}
    {# % if source == 'contentType' %}
        ...
    {% elseif source == 'scribite' %}
        ...
    {% endif % #}

    {# you can enable more details about the item: #}
    {#
        <p class="muyourcitymodule-external-description">
            {% if serviceOfLocation.description is not empty %}{{ serviceOfLocation.description }}<br />{% endif %}
        </p>
    #}
{% endif %}
</div>
