{# purpose of this template: offers atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest offers') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of offers') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('muyourcitymodule_offer_' ~ routeArea ~ 'display', {  }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('muyourcitymodule_offer_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for offer in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ offer|muyourcitymodule_formattedTitle|notifyFilters('muyourcitymodule.filterhook.offers')|safeHtml }}</title>
    <link rel="alternate" type="text/html" href="{{ url('muyourcitymodule_offer_' ~ routeArea ~ 'display', {  }) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ offer.createdDate|date('Y-m-d') }}:{{ path('muyourcitymodule_offer_' ~ routeArea ~ 'display', {  }) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if offer.updatedDate|default %}
        <updated>{{ offer.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if offer.createdDate|default %}
        <published>{{ offer.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if offer.createdBy|default and offer.createdBy.getUid() > 0 %}
        {% set creatorAttributes = offer.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(offer.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ offer.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ offer.text|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ offer.name|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
