{# purpose of this template: offers xml inclusion template #}
<offer id="{{ offer.getId() }}" createdon="{{ offer.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ offer.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ offer.id }}</id>
    <name><![CDATA[{{ offer.name }}]]></name>
    <description><![CDATA[{{ offer.description|safeHtml }}]]></description>
    <urlToOfferOnHomepage>{{ offer.urlToOfferOnHomepage }}</urlToOfferOnHomepage>
    <imageOfOffer{% if offer.imageOfOffer is not empty and offer.imageOfOfferMeta|default %} extension="{{ offer.imageOfOfferMeta.extension }}" size="{{ offer.imageOfOfferMeta.size }}" isImage="{% if offer.imageOfOfferMeta.isImage %}true{% else %}false{% endif %}"{% if offer.imageOfOfferMeta.isImage %} width="{{ offer.imageOfOfferMeta.width }}" height="{{ offer.imageOfOfferMeta.height }}" format="{{ offer.imageOfOfferMeta.format }}"{% endif %}{% endif %}>{{ offer.imageOfOffer }}</imageOfOffer>
    <priceOfOffer>{{ offer.priceOfOffer|localizedcurrency('EUR') }}</priceOfOffer>
    <normalPrice>{{ offer.normalPrice|localizedcurrency('EUR') }}</normalPrice>
    <percentOfOffer>{{ offer.percentOfOffer }}%</percentOfOffer>
    <effectivFrom>{{ offer.effectivFrom|localizeddate('medium', 'short') }}</effectivFrom>
    <effectivUntil>{{ offer.effectivUntil|localizeddate('medium', 'short') }}</effectivUntil>
    <inViewFrom>{% if offer.inViewFrom is not empty %}
        {{ offer.inViewFrom|localizeddate('medium', 'short') }}
    {% endif %}</inViewFrom>
    <inViewUntil>{% if offer.inViewUntil is not empty %}
        {{ offer.inViewUntil|localizeddate('medium', 'short') }}
    {% endif %}</inViewUntil>
    <myLocation>{{ offer.myLocation|muyourcitymodule_listEntry('offer', 'myLocation') }}</myLocation>
    <workflowState>{{ offer.workflowState|muyourcitymodule_objectState(false)|lower }}</workflowState>
</offer>
