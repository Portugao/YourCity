{# purpose of this template: dishes list view #}
{% extends routeArea == 'admin' ? 'MUYourCityModule::adminBase.html.twig' : 'MUYourCityModule::base.html.twig' %}
{% block title own ? __('My dishes') : __('Dish list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="muyourcitymodule-dish muyourcitymodule-view">

    {{ block('page_nav_links') }}

    {{ include('@MUYourCityModule/Dish/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('muyourcitymodule_dish_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="dishesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cName" />
                <col id="cDescription" />
                <col id="cImageOfDish" />
                <col id="cPriceOfDish" />
                <col id="cPositionOfDish" />
                <col id="cMenuOfLocation" />
                <col id="cPartOfMenu" />
                <col id="cLocation" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="muyourcity-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                <th id="hName" scope="col" class="text-left">
                    <a href="{{ sort.name.url }}" title="{{ __f('Sort by %s', {'%s': 'name'}) }}" class="{{ sort.name.class }}">{{ __('Name') }}</a>
                </th>
                <th id="hDescription" scope="col" class="text-left">
                    <a href="{{ sort.description.url }}" title="{{ __f('Sort by %s', {'%s': 'description'}) }}" class="{{ sort.description.class }}">{{ __('Description') }}</a>
                </th>
                <th id="hImageOfDish" scope="col" class="text-left">
                    <a href="{{ sort.imageOfDish.url }}" title="{{ __f('Sort by %s', {'%s': 'image of dish'}) }}" class="{{ sort.imageOfDish.class }}">{{ __('Image of dish') }}</a>
                </th>
                <th id="hPriceOfDish" scope="col" class="text-right">
                    <a href="{{ sort.priceOfDish.url }}" title="{{ __f('Sort by %s', {'%s': 'price of dish'}) }}" class="{{ sort.priceOfDish.class }}">{{ __('Price of dish') }}</a>
                </th>
                <th id="hPositionOfDish" scope="col" class="text-right">
                    <a href="{{ sort.positionOfDish.url }}" title="{{ __f('Sort by %s', {'%s': 'position of dish'}) }}" class="{{ sort.positionOfDish.class }}">{{ __('Position of dish') }}</a>
                </th>
                <th id="hMenuOfLocation" scope="col" class="text-left">
                    <a href="{{ sort.menuOfLocation.url }}" title="{{ __f('Sort by %s', {'%s': 'menu of location'}) }}" class="{{ sort.menuOfLocation.class }}">{{ __('Menu of location') }}</a>
                </th>
                <th id="hPartOfMenu" scope="col" class="text-left">
                    <a href="{{ sort.partOfMenu.url }}" title="{{ __f('Sort by %s', {'%s': 'part of menu'}) }}" class="{{ sort.partOfMenu.class }}">{{ __('Part of menu') }}</a>
                </th>
                <th id="hLocation" scope="col" class="text-left">
                    <a href="{{ sort.location.url }}" title="{{ __f('Sort by %s', {'%s': 'location'}) }}" class="{{ sort.location.class }}">{{ __('Location') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for dish in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ dish.id }}" class="muyourcity-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ dish.id }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('MUYourCityModule:ItemActionsMenu:menu', [], { entity: dish, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ dish.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
                <td headers="hName" class="text-left">
                    <a href="{{ path('muyourcitymodule_dish_' ~ routeArea ~ 'display', { 'id': dish.id }) }}" title="{{ __('View detail page')|e('html_attr') }}">{{ dish.name|notifyFilters('muyourcitymodule.filterhook.dishes') }}</a>
                </td>
                <td headers="hDescription" class="text-left">
                    {{ dish.description|safeHtml|truncate(50) }}
                </td>
                <td headers="hImageOfDish" class="text-left">
                    {% if dish.imageOfDish is not empty and dish.imageOfDishMeta|default %}
                                <a href="{{ dish.imageOfDishUrl }}" title="{{ dish|muyourcitymodule_formattedTitle|e('html_attr') }}"{% if dish.imageOfDishMeta.isImage %} class="image-link"{% endif %}>
                    {% if dish.imageOfDishMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'dishImageOfDish') %}
                        <img src="{{ dish.imageOfDish.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ dish|muyourcitymodule_formattedTitle|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ dish.imageOfDishMeta.size|muyourcitymodule_fileSize(dish.imageOfDish.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hPriceOfDish" class="text-right">
                    {{ dish.priceOfDish|localizedcurrency('EUR') }}
                </td>
                <td headers="hPositionOfDish" class="text-right">
                    {{ dish.positionOfDish }}
                </td>
                <td headers="hMenuOfLocation" class="text-left">
                    {% if dish.menuOfLocation|default %}
                        <a href="{{ path('muyourcitymodule_menuoflocation_' ~ routeArea ~ 'display', { 'id': dish.menuOfLocation.id }) }}">{% spaceless %}
                          {{ dish.menuOfLocation|muyourcitymodule_formattedTitle }}
                        {% endspaceless %}</a>
                        <a id="menuOfLocationItem{{ dish.id }}_rel_{{ dish.menuOfLocation.id }}Display" href="{{ path('muyourcitymodule_menuoflocation_' ~ routeArea ~ 'display', {'id': dish.menuOfLocation.id, 'raw': 1 }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ dish.menuOfLocation|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
                <td headers="hPartOfMenu" class="text-left">
                    {% if dish.partOfMenu|default %}
                        <a href="{{ path('muyourcitymodule_partofmenu_' ~ routeArea ~ 'display', { 'id': dish.partOfMenu.id }) }}">{% spaceless %}
                          {{ dish.partOfMenu|muyourcitymodule_formattedTitle }}
                        {% endspaceless %}</a>
                        <a id="partOfMenuItem{{ dish.id }}_rel_{{ dish.partOfMenu.id }}Display" href="{{ path('muyourcitymodule_partofmenu_' ~ routeArea ~ 'display', {'id': dish.partOfMenu.id, 'raw': 1 }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ dish.partOfMenu|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
                <td headers="hLocation" class="text-left">
                    {% if dish.location|default %}
                        <a href="{{ path('muyourcitymodule_location_' ~ routeArea ~ 'display', { 'id': dish.location.id, 'slug': dish.location.slug }) }}">{% spaceless %}
                          {{ dish.location|muyourcitymodule_formattedTitle }}
                        {% endspaceless %}</a>
                        <a id="locationItem{{ dish.id }}_rel_{{ dish.location.id }}Display" href="{{ path('muyourcitymodule_location_' ~ routeArea ~ 'display', {'id': dish.location.id, 'slug': dish.location.slug, 'raw': 1 }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ dish.location|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}10{% else %}9{% endif %}">
            {{ __('No dishes found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if all != 1 and pager|default %}
            {{ pager({ rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'muyourcitymodule_dish_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUYourCityModuleAction" class="col-sm-3 control-label">{{ __('With selected dishes') }}</label>
                <div class="col-sm-6">
                    <select id="mUYourCityModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('MUYourCityModule:Dish:', '::', 'ACCESS_EDIT') %}
                {% set createTitle = __('Create dish') %}
                <a href="{{ path('muyourcitymodule_dish_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if all == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('muyourcitymodule_dish_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('muyourcitymodule_dish_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='muyourcitymodule.ui_hooks.dishes.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
