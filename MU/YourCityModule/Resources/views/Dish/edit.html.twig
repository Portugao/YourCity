{# purpose of this template: build the form to edit an instance of dish #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : (routeArea == 'admin' ? 'adminBase' : 'base') %}
{% extends 'MUYourCityModule::' ~ baseTemplate ~ '.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@MUYourCityModule:js/MUYourCityModule.Validation.js'), 98) }}
    {{ pageAddAsset('javascript', zasset('@MUYourCityModule:js/MUYourCityModule.EditFunctions.js'), 99) }}
    {{ pageAddAsset('javascript', asset('typeahead/typeahead.bundle.min.js')) }}
{% endblock %}
{% block title mode == 'create' ? __('Create dish') : __('Edit dish') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="muyourcitymodule-dish muyourcitymodule-edit">
        {% form_theme form with [
            '@MUYourCityModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form, {attr: {id: 'dishEditForm', class: 'muyourcity-edit-form'}}) }}
        {{ form_errors(form) }}
        {% if translationsEnabled == true %}
            <div class="zikula-bootstrap-tab-container">
                <ul class="{{ form.vars.id|lower }}-translation-locales nav nav-tabs">
                    {% for language in supportedLanguages %}
                        <li{% if language == app.request.locale %} class="active"{% endif %}>
                            <a href="#" data-toggle="tab" data-target=".{{ form.vars.id|lower }}-translations-fields-{{ language }}">
                                {% if not form.vars.valid %}
                                    <span class="label label-danger"><i class="fa fa-warning"></i><span class="sr-only">{{ __('Errors') }}</span></span>
                                {% endif %}
                                {% set hasRequiredFields = language in localesWithMandatoryFields %}
                                {% if hasRequiredFields %}<span class="required">{% endif %}{{ language|languageName|safeHtml }}{% if hasRequiredFields %}</span>{% endif %}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="{{ form.vars.id|lower }}-translation-fields tab-content">
                    {% for language in supportedLanguages %}
                        <div class="{{ form.vars.id|lower }}-translations-fields-{{ language }} tab-pane fade{% if language == app.request.locale %} active in{% endif %}">
                            <fieldset>
                                <legend>{{ language|languageName|safeHtml }}</legend>
                                {% if language == app.request.locale %}
                                    {{ form_row(form.name) }}
                                    {{ form_row(form.description) }}
                                {% else %}
                                    {{ form_row(attribute(form, 'translations' ~ language)) }}
                                {% endif %}
                            </fieldset>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            {% set language = app.request.locale %}
            <fieldset>
                <legend>{{ language|languageName|safeHtml }}</legend>
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
            </fieldset>
        {% endif %}
        <fieldset>
            <legend>{{ __('Further properties') }}</legend>
            {{ form_row(form.kindOfDish) }}
            {{ form_row(form.imageOfDish) }}
            {{ form_row(form.priceOfDish) }}
            {{ form_row(form.positionOfDish) }}
        </fieldset>
        
        {{ include(
            '@MUYourCityModule/MenuOfLocation/includeSelectOne.html.twig',
            { group: 'dish', alias: 'menuOfLocation', aliasReverse: 'dishes', mandatory: false, idPrefix: 'yourcityDish_MenuOfLocation', linkingItem: dish, displayMode: 'choices' }
        ) }}
        {{ include(
            '@MUYourCityModule/PartOfMenu/includeSelectOne.html.twig',
            { group: 'dish', alias: 'partOfMenu', aliasReverse: 'dishes', mandatory: false, idPrefix: 'yourcityDish_PartOfMenu', linkingItem: dish, displayMode: 'choices' }
        ) }}
        {{ include(
            '@MUYourCityModule/Location/includeSelectOne.html.twig',
            { group: 'dish', alias: 'location', aliasReverse: 'dishes', mandatory: true, idPrefix: 'yourcityDish_Location', linkingItem: dish, displayMode: 'choices' }
        ) }}
        {% if mode != 'create' %}
            {{ include('@MUYourCityModule/Helper/includeStandardFieldsEdit.html.twig', { obj: dish }) }}
        {% endif %}
        
        {% set hookId = mode != 'create' ? dish.getKey() : null %}
        {% set hooks = notifyDisplayHooks(eventName='muyourcitymodule.ui_hooks.dishes.form_edit', id=hookId) %}
        {% if hooks is iterable and hooks|length > 0 %}
            {% for providerArea, hook in hooks if providerArea != 'provider.scribite.ui_hooks.editor' %}
                <fieldset>
                    <legend>{{ providerArea }}</legend>
                    {{ hook }}
                </fieldset>
            {% endfor %}
        {% endif %}
        
        {% if form.moderationSpecificCreator is defined %}
            <fieldset id="moderationFieldsSection">
                <legend>{{ __('Moderation') }} <i class="fa fa-expand"></i></legend>
                <div id="moderationFieldsContent">
                    {{ form_row(form.moderationSpecificCreator) }}
                    {{ form_row(form.moderationSpecificCreationDate) }}
                </div>
            </fieldset>
        {% endif %}
        
        {# include return control #}
        {% if mode == 'create' %}
            <fieldset>
                <legend>{{ __('Return control') }}</legend>
                {{ form_row(form.repeatCreation) }}
            </fieldset>
        {% endif %}
        
        {# include possible submit actions #}
        <div class="form-group form-buttons">
            <div class="col-sm-offset-3 col-sm-9">
                {% for action in actions %}
                    {{ form_widget(attribute(form, action.id)) }}
                {% endfor %}
                {{ form_widget(form.reset) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set removeImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
        ( function($) {
            $(document).ready(function() {
                // initialise auto completion for user fields
                {% if form.moderationSpecificCreator is defined %}
                    mUYourCityInitUserField('muyourcitymodule_dish_moderationSpecificCreator', 'getCommonUsersList');
                {% endif %}
                mUYourCityInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ dish.getKey() }}{% endif %}');
                mUYourCityInitUploadField('muyourcitymodule_dish_imageOfDish_imageOfDish');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
