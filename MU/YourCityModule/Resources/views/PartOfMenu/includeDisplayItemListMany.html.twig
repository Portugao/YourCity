{# purpose of this template: inclusion template for display of related parts of menu #}
{% set hasAdminPermission = hasPermission('MUYourCityModule:PartOfMenu:', '::', 'ACCESS_EDIT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group muyourcitymodule-related-item-list partofmenu">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
{% spaceless %}
{% if not nolink %}
    <a href="{{ path('muyourcitymodule_partofmenu_' ~ routeArea ~ 'display', { 'id': item.id }) }}" title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|muyourcitymodule_formattedTitle }}
{% if not nolink %}
    </a>
    <a id="partOfMenuItem{{ item.id }}Display" href="{{ path('muyourcitymodule_partofmenu_' ~ routeArea ~ 'display', { 'id': item.id, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="muyourcity-inline-window hidden" data-modal-title="{{ item|muyourcitymodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
