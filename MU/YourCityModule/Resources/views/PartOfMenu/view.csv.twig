{# purpose of this template: parts of menu view csv view #}
{% spaceless %}"{{ __('Name') }}";"{{ __('Description') }}";"{{ __('Position of part') }}";"{{ __('Workflow state') }}"
;"{{ __('Menu of location') }}"
;"{{ __('Dishes') }}"
{% endspaceless %}
{% for partOfMenu in items %}
{% spaceless %}
    "{{ partOfMenu.name }}";"{{ partOfMenu.description|safeHtml }}";"{{ partOfMenu.positionOfPart }}";"{{ partOfMenu.workflowState|muyourcitymodule_objectState(false)|lower }}"
    ;"{% if partOfMenu.menuOfLocation|default %}{{ partOfMenu.menuOfLocation|muyourcitymodule_formattedTitle }}{% endif %}"
    ;"
    {% if partOfMenu.dishes|default %}
        {% for relatedItem in partOfMenu.dishes %}
        {{ relatedItem|muyourcitymodule_formattedTitle }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    {% endif %}
    "
{% endspaceless %}
{% endfor %}
